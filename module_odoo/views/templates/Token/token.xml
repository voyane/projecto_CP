<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <template id="on_sucess_submit" name="Thanks you page">
        <t t-call="ntizu.custom_layout">
            <div class="wrap">
                <style>
                    @font-face {
                    font-family: "Azonix";
                    src: url(/ntizu/static/src/Fonts/Azonix.otf);
                    }

                    @font-face {
                    font-family: "Montserrat";
                    src: url(/ntizu/static/src/Fonts/Montserrat-VariableFont_wght.ttf);
                    }

                    .bg-cor{
                    background-color: #d1d5db; ;
                    }

                    .bg-button {
                    background: linear-gradient(
                    140deg,
                    rgb(0, 97, 64) 28.95%,
                    rgb(116, 156, 7) 100%,
                    rgba(116, 156, 7, 0.47) 98.86%
                    );
                    box-shadow: rgb(0, 0, 0) 3px 3px 8px;
                    border: none;
                    font-family: "Azonix";
                    font-weight: 400;
                    font-style: normal;
                    }

                    .text-custom {
                    --tw-text-opacity: 1;
                    color: rgb(0 62 36 / var(--tw-text-opacity));
                    }

                    .bg-none {
                    background: none;
                    }
                    .no-outline {
                    outline: none;
                    box-shadow: none;
                    }

                    .carousel-item .carousel-imagem {
                    object-fit: cover;
                    height: 100vh;
                    }
                    .w-largura {
                    width: 50%;
                    }

                    .fs-size {
                    font-size: 2.25rem;
                    line-height: 2.25rem;
                    font-weight: 400;
                    font-style: normal;
                    color: #003e24;
                    font-family: "Azonix";
                    }

                    .largura {
                    width: 208px;
                    }

                    .text-custom{
                    --tw-text-opacity: 1;
                    color: rgb(0 62 36 / var(--tw-text-opacity));
                    --tw-border-opacity: 1;
                    border-color: rgb(0 97 64 / var(--tw-border-opacity));
                    }
                </style>


                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/ntizu/static/src/Imagens/texture-web.svg" alt="..."/>
                            <div class="carousel-caption text-center">
                                <div class="d-flex align-items-center w-100 vh-100 justify-content-center">
                                    <div class="">
                                        <img class="largura" src="/ntizu/static/src/Imagens/verify-email.svg" alt=""/>
                                        <div>
                                            <h3 class="text-verde fs-size">
                                                VERIFIQUE SEU E-MAIL PARA PROSSEGUIR
                                            </h3>
                                            <p class="custom-primary">
                                                Acabamos de enviar um codigo para o seu e-mail.
                                            </p>
                                        </div>
                                        <div>
                                            <input class="w-largura text-center px-2 py-3 border-2 border-0 focus-visible:border-primary rounded no-outline bg-cor"
                                                   type="text" name="" id=""/>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-center gap-5">
                                            <div class="mt-3 d-flex align-items-center justify-content-center gap-5">
                                                <button class="text-custom fw-bold px-5 py-2 rounded-pill transition d-inline-block bg-none">
                                                    Reenviar
                                                </button>

                                                <button class="text-white fw-bold px-5 py-2 rounded-pill transition d-inline-block bg-button">
                                                    Enviar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


</odoo>